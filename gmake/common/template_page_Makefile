include $(SOURCE_DIR)/vars.pri

SOURCE_PATHS=$(addprefix $(SOURCE_DIR)/, $(SOURCES))

PAGE_PATH=$(BUILD_DIR)/$(PAGE_NAME).html
PAGE_DIRECTORY=$(dir $(PAGE_PATH))

all: $(PAGE_PATH)

$(PAGE_PATH): result.html $(PAGE_DIRECTORY)
	cp result.html $(PAGE_PATH)

$(PAGE_DIRECTORY):
	mkdir -p $@	

result.html: $(SOURCE_DIR)/$(TEMPLATE) $(SOURCE_PATHS) $(ROOT_DIR)tdp_build/pages/build_pages.sh
	$(ROOT_DIR)tdp_build/pages/build_pages.sh $(SOURCE_DIR) $(SOURCE_DIR)/$(TEMPLATE) $(SOURCE_PATHS)

